            <ComboBox fx:id="problemSizeSelect" onAction="#onChangeProblemSize" promptText="Problem size" style="-fx-background-color: #8FFCFF; -fx-border-style: solid 2px; -fx-border-color: #7AD0D2;" />
            <ComboBox fx:id="baseCaseSelect" onAction="#onChangeBaseCase" promptText="Base case" style="-fx-background-color: #FFFA8F; -fx-border-style: solid; -fx-border-color: #E8E383;">
