      <TextField fx:id="parameters" promptText="Introduce los parÃ¡metros (ej: 2,3)" GridPane.columnIndex="1" GridPane.rowIndex="0" />
      <Label fx:id="originalDataSolutionArrow" text="=====================&gt;" GridPane.columnIndex="2" GridPane.rowIndex="0" />
      <Label fx:id="originalSolution" GridPane.columnIndex="3" GridPane.rowIndex="0" />
      <Line endY="60.0" layoutX="50.0" layoutY="50.0" strokeWidth="2.0" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
      <Line endY="60.0" layoutX="50.0" layoutY="50.0" strokeWidth="2.0" GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
      <ComboBox fx:id="reductionSelect" onAction="#onChangeReduction" promptText="Reduction" style="-fx-background-color: #FFD58C; -fx-border-style: solid; -fx-border-color: #DFBA7B;" GridPane.columnIndex="0" GridPane.rowIndex="1">
