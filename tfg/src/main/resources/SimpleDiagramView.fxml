<GridPane alignment="CENTER" hgap="10.0" prefHeight="800.0" prefWidth="1200.0" vgap="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.SimpleDiagramPresenter">
   <columnConstraints>
      <ColumnConstraints />
