         </GridPane.margin></ComboBox>
      <Label fx:id="subParameters" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <Button fx:id="confirmDataButton" onAction="#handleInput" text="Confirm Data" GridPane.columnIndex="0" GridPane.rowIndex="2" />
      <Label fx:id="partialDataSolutionArrow" text="=====================&gt;" GridPane.columnIndex="2" GridPane.rowIndex="3" />
      <Label fx:id="partialSolution" GridPane.columnIndex="3" GridPane.rowIndex="3" />
      <ComboBox fx:id="solutionSelect" onAction="#onSolutionChange" GridPane.columnIndex="3" GridPane.rowIndex="2" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
