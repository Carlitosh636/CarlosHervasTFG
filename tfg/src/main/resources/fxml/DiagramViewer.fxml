<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.DiagramPresenter">
   <HBox prefHeight="1200.0" prefWidth="1600.0">
      <children>
         <VBox fx:id="SizeAndBaseCaseBox" prefHeight="300.0" prefWidth="500.0" spacing="10.0">
