<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="root" style="-fx-background-color: #48045e;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.presenter.DiagramPresenter">
   <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
      <children>
         <TextArea editable="false" maxHeight="-Infinity" prefHeight="200.0" prefWidth="800.0" style="-fx-background-color: #e0e0e0; -fx-border-color: #bababa;" text="ENUNCIADO&#10;&#10;">
            <font>
               <Font size="16.0" />
            </font></TextArea>
         <HBox prefHeight="1200.0" prefWidth="1600.0">
            <children>
               <VBox fx:id="SizeAndBaseCaseBox" prefHeight="300.0" prefWidth="300.0" spacing="10.0">
                  <children>
                     <HBox prefHeight="30.0" prefWidth="200.0">
                        <children>
                           <Label text="1. Problem size" textFill="WHITE">
                              <font>
                                 <Font size="15.0" />
                              </font>
                              <padding>
                                 <Insets right="10.0" />
                              </padding>
                           </Label>
                           <ComboBox id="combo-box-1" fx:id="problemSizeSelect" onAction="#onChangeProblemSize" prefHeight="30.0" prefWidth="150.0" promptText="Problem size" stylesheets="@../css/combobox.css" />
                        </children>
                     </HBox>
                     <HBox prefHeight="30.0" prefWidth="200.0">
                        <children>
                           <Label text="2. Base case" textFill="WHITE">
                              <font>
                                 <Font size="15.0" />
                              </font>
                              <padding>
                                 <Insets right="10.0" />
                              </padding>
                           </Label>
                           <ComboBox id="combo-box-2" fx:id="baseCaseSelect" onAction="#onChangeBaseCase" prefHeight="30.0" prefWidth="125.0" promptText="Base case" stylesheets="@../css/combobox.css" />
                        </children>
                     </HBox>
                     <Button id="button" fx:id="returnMenuButton" onAction="#returnToMenu" stylesheets="@../css/button.css" text="Return to menu" textFill="WHITE">
                        <opaqueInsets>
                           <Insets />
                        </opaqueInsets>
                        <font>
                           <Font size="15.0" />
                        </font>
                     </Button>
                  </children>
               </VBox>
      
               <GridPane fx:id="diagramGrid" hgap="10.0" vgap="10.0">
                  <columnConstraints>
                     <ColumnConstraints />
                     <ColumnConstraints />
                     <ColumnConstraints />
                     <ColumnConstraints />
                     <ColumnConstraints />
                  </columnConstraints>
                  <rowConstraints>
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                  </rowConstraints>
                  <children>
                     <VBox fx:id="originalData" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                     <Line fx:id="originalDataSolutionArrow" endX="250.0" layoutX="60.0" startX="60.0" stroke="WHITE" strokeWidth="2.0" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                     <Label fx:id="isCorrect" contentDisplay="CENTER" textAlignment="CENTER" textFill="WHITE" GridPane.columnIndex="3" GridPane.rowIndex="0">
                        <font>
                           <Font size="15.0" />
                        </font>
                     </Label>
                     <Label fx:id="originalSolution" alignment="CENTER" contentDisplay="CENTER" textFill="WHITE" GridPane.columnIndex="3" GridPane.rowIndex="1">
                        <font>
                           <Font size="15.0" />
                        </font>
                     </Label>
                     <Label fx:id="calculatedSolution" contentDisplay="CENTER" layoutX="339.0" layoutY="340.0" textFill="WHITE" GridPane.columnIndex="3" GridPane.rowIndex="2">
                        <font>
                           <Font size="15.0" />
                        </font>
                     </Label>
                     <Line fx:id="datasArrow" endY="60.0" layoutX="50.0" layoutY="50.0" stroke="WHITE" strokeWidth="2.0" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="CENTER" />
                     <Line fx:id="solutionsArrow" endY="60.0" layoutX="50.0" layoutY="50.0" stroke="WHITE" strokeWidth="2.0" GridPane.columnIndex="3" GridPane.halignment="LEFT" GridPane.rowIndex="3" GridPane.valignment="CENTER" />
                     <VBox fx:id="subParameters" GridPane.columnIndex="1" GridPane.rowIndex="5">
                        <children>
                           <Label alignment="CENTER_RIGHT" contentDisplay="RIGHT">
                              <font>
                                 <Font size="15.0" />
                              </font>
                           </Label>
                        </children>
                     </VBox>
                     <Line fx:id="partialDataSolutionArrow" endX="250.0" layoutX="60.0" startX="60.0" stroke="WHITE" strokeWidth="2.0" GridPane.columnIndex="2" GridPane.rowIndex="5" />
                     <VBox fx:id="partialSolutions" GridPane.columnIndex="3" GridPane.rowIndex="5">
                        <children>
                           <Label alignment="CENTER" contentDisplay="CENTER">
                              <font>
                                 <Font size="15.0" />
                              </font>
                           </Label>
                        </children>
                     </VBox>
                     <ComboBox id="combo-box-3" fx:id="decompositionSelect" onAction="#onDescompositionChange" prefHeight="30.0" prefWidth="150.0" promptText="Reduction" stylesheets="@../css/combobox.css" GridPane.rowIndex="3" />
                     <ComboBox id="combo-box-4" fx:id="solutionSelect" onAction="#onSolutionChange" prefHeight="30.0" prefWidth="150.0" promptText="Solution" stylesheets="@../css/combobox.css" GridPane.columnIndex="3" GridPane.rowIndex="3">
                        <GridPane.margin>
                           <Insets left="5.0" />
                        </GridPane.margin></ComboBox>
                  </children>
                  <HBox.margin>
                     <Insets />
                  </HBox.margin>
               </GridPane>
            </children>
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
         </HBox>
      </children>
   </VBox>

</AnchorPane>
