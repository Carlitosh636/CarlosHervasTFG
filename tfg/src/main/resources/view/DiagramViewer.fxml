                     <Label id="background" fx:id="calculatedSolution" contentDisplay="CENTER" stylesheets="@../css/boxes-background.css" textFill="WHITE" GridPane.columnIndex="3" GridPane.rowIndex="0">
                        <font>
                           <Font size="15.0" />
                        </font>
                     </Label>
                     <Label id="background" fx:id="originalSolution" alignment="CENTER" contentDisplay="CENTER" stylesheets="@../css/boxes-background.css" textFill="WHITE" GridPane.columnIndex="3" GridPane.rowIndex="1">
                        <font>
                           <Font size="15.0" />
                        </font>
                     </Label>
                     <Line fx:id="datasArrow" endY="60.0" layoutX="50.0" layoutY="50.0" stroke="WHITE" strokeWidth="2.0" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="CENTER" />
