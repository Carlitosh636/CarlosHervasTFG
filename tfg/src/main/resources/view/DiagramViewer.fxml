                        <children>
                           <Label alignment="CENTER_RIGHT" contentDisplay="RIGHT">
                              <font>
                                 <Font size="15.0" />
                              </font>
                           </Label>
                        </children>
                     </VBox>
                     <Line fx:id="partialDataSolutionArrow" endX="250.0" layoutX="60.0" startX="60.0" stroke="WHITE" strokeWidth="2.0" GridPane.columnIndex="2" GridPane.rowIndex="5" />
                     <VBox id="background" fx:id="partialSolutions" stylesheets="@../css/boxes-background.css" GridPane.columnIndex="3" GridPane.rowIndex="5">
                        <children>
                           <Label alignment="CENTER" contentDisplay="CENTER">
                              <font>
                                 <Font size="15.0" />
                              </font>
                           </Label>
                        </children>
                     </VBox>
                     <ComboBox id="combo-box-3" fx:id="decompositionSelect" onAction="#onDescompositionChange" prefHeight="30.0" prefWidth="150.0" promptText="Reduction" stylesheets="@../css/combobox.css" GridPane.rowIndex="3">
                        <GridPane.margin>
                           <Insets right="5.0" />
                        </GridPane.margin></ComboBox>
                     <ComboBox id="combo-box-4" fx:id="solutionSelect" onAction="#onSolutionChange" prefHeight="30.0" prefWidth="150.0" promptText="Solution" stylesheets="@../css/combobox.css" GridPane.columnIndex="3" GridPane.rowIndex="3">
                        <GridPane.margin>
                           <Insets left="20.0" />
                        </GridPane.margin></ComboBox>
                  </children>
                  <HBox.margin>
                     <Insets />
                  </HBox.margin>
                  <padding>
                     <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
                  </padding>
               </GridPane>
            </children>
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
         </HBox>
      </children>
   </VBox>

