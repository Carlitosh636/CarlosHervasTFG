         <HBox prefHeight="1200.0" prefWidth="1600.0">
            <children>
               <VBox fx:id="SizeAndBaseCaseBox" prefHeight="300.0" prefWidth="300.0" spacing="10.0">
                  <children>
                     <Label text="1. Problem size" textFill="WHITE">
                        <font>
                           <Font size="18.0" />
                        </font>
                        <padding>
                           <Insets right="10.0" />
                        </padding>
                     </Label>
                     <ComboBox id="combo-box-1" fx:id="problemSizeSelect" onAction="#onChangeProblemSize" promptText="Problem size" stylesheets="@../css/combobox.css" />
                     <Label text="2. Base case" textFill="WHITE">
                        <font>
                           <Font size="18.0" />
                        </font>
                        <padding>
                           <Insets right="10.0" />
                        </padding>
                     </Label>
                     <ComboBox id="combo-box-2" fx:id="baseCaseSelect" onAction="#onChangeBaseCase" promptText="Base case" stylesheets="@../css/combobox.css" />
                     <Button id="button" fx:id="returnMenuButton" onAction="#returnToMenu" stylesheets="@../css/button.css" text="Return to menu" textFill="WHITE">
                        <opaqueInsets>
                           <Insets />
                        </opaqueInsets>
                        <font>
                           <Font size="16.0" />
                        </font>
                        <VBox.margin>
                           <Insets top="100.0" />
                        </VBox.margin>
                     </Button>
                  </children>
               </VBox>

               <GridPane fx:id="diagramGrid" hgap="10.0" maxHeight="-Infinity" vgap="10.0">
                  <columnConstraints>
                     <ColumnConstraints />
                     <ColumnConstraints />
                     <ColumnConstraints />
                     <ColumnConstraints />
                     <ColumnConstraints />
                  </columnConstraints>
                  <rowConstraints>
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                  </rowConstraints>
                  <children>
                     <VBox id="background" fx:id="originalData" stylesheets="@../css/boxes-background.css" GridPane.columnIndex="1" GridPane.rowIndex="1" />
