<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="root" style="-fx-background-color: #000833;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.presenter.DiagramPresenter">
   <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
      <children>
         <HBox>
            <children>
               <TextArea fx:id="heading" editable="false" maxWidth="700.0" stylesheets="@../css/header.css" text="ENUNCIADO&#10;&#10;">
                  <font>
                     <Font size="24.0" />
                  </font>
               </TextArea>
               <TextArea fx:id="heading1" editable="false" maxWidth="700.0" style="text-area-background: grey; -fx-text-fill: black;" stylesheets="@../css/header.css" text="AQUÍ EL GENERADOR DE CÓDIGO&#10;&#10;&#10;">
                  <font>
                     <Font size="24.0" />
                  </font>
               </TextArea>
            </children>
         </HBox>
         <HBox>
            <children>
               <VBox id="background" fx:id="SizeAndBaseCaseBox" prefHeight="300.0" prefWidth="300.0" spacing="10.0" stylesheets="@../css/boxes-background.css">
                  <children>
                     <Label text="1. Tamaño del problema" textFill="WHITE">
                        <font>
                           <Font size="18.0" />
                        </font>
                        <padding>
                           <Insets right="10.0" />
                        </padding>
                     </Label>
                     <ComboBox id="combo-box-1" fx:id="problemSizeSelect" minWidth="125.0" onAction="#onChangeProblemSize" stylesheets="@../css/combobox.css" />
                     <Label text="2. Caso(s) base" textFill="WHITE">
                        <font>
                           <Font size="18.0" />
                        </font>
                        <padding>
                           <Insets right="10.0" />
                        </padding>
                     </Label>
                     <ComboBox id="combo-box-2" fx:id="baseCaseSelect" minWidth="125.0" onAction="#onChangeBaseCase" stylesheets="@../css/combobox.css" />
                  </children>
                  <padding>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </padding>
               </VBox>
               <VBox fx:id="diagramGridHolder">
                  <children>
                     <GridPane id="background" fx:id="diagramGrid" hgap="10.0" maxHeight="-Infinity" stylesheets="@../css/boxes-background.css" vgap="5.0">
                        <columnConstraints>
                           <ColumnConstraints />
                           <ColumnConstraints />
                           <ColumnConstraints />
                           <ColumnConstraints />
                           <ColumnConstraints />
                        </columnConstraints>
                        <rowConstraints>
                           <RowConstraints />
                           <RowConstraints />
                           <RowConstraints />
                           <RowConstraints />
                           <RowConstraints />
                           <RowConstraints />
                        </rowConstraints>
                        <children>
                           <VBox fx:id="originalData" minHeight="-Infinity" minWidth="-Infinity" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                           <StackPane fx:id="originalDataSolutionArrow" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                           <Label fx:id="calculatedSolution" contentDisplay="CENTER" minHeight="-Infinity" minWidth="-Infinity" textFill="WHITE" GridPane.columnIndex="4" GridPane.rowIndex="1">
                              <font>
                                 <Font size="15.0" />
                              </font>
                           </Label>
                           <Label id="diagramDataHolders" fx:id="originalSolution" alignment="CENTER" contentDisplay="CENTER" minHeight="-Infinity" minWidth="-Infinity" prefWidth="100.0" stylesheets="@../css/boxes-background.css" textFill="WHITE" GridPane.columnIndex="3" GridPane.rowIndex="1">
                              <font>
                                 <Font size="15.0" />
                              </font>
                           </Label>
                           <StackPane fx:id="datasArrow" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="CENTER" />
                           <StackPane fx:id="solutionsArrow" GridPane.columnIndex="3" GridPane.halignment="LEFT" GridPane.rowIndex="3" GridPane.valignment="CENTER" />
                           <VBox id="diagramDataHolders" fx:id="subParameters" alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" prefWidth="100.0" stylesheets="@../css/boxes-background.css" GridPane.columnIndex="1" GridPane.rowIndex="5">
                              <children>
                                 <Label alignment="CENTER_RIGHT" contentDisplay="RIGHT">
                                    <font>
                                       <Font size="15.0" />
                                    </font>
                                 </Label>
                              </children>
                           </VBox>
                           <StackPane fx:id="partialDataSolutionArrow" GridPane.columnIndex="2" GridPane.rowIndex="5" />
                           <VBox id="diagramDataHolders" fx:id="partialSolutions" alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" prefWidth="100.0" stylesheets="@../css/boxes-background.css" GridPane.columnIndex="3" GridPane.rowIndex="5">
                              <children>
                                 <Label alignment="CENTER" contentDisplay="CENTER">
                                    <font>
                                       <Font size="15.0" />
                                    </font>
                                 </Label>
                              </children>
                           </VBox>
                           <ComboBox id="combo-box-3" fx:id="decompositionSelect" minWidth="150.0" onAction="#onDescompositionChange" stylesheets="@../css/combobox.css" GridPane.rowIndex="3">
                              <GridPane.margin>
                                 <Insets right="5.0" />
                              </GridPane.margin>
                           </ComboBox>
                           <ComboBox id="combo-box-4" fx:id="solutionSelect" onAction="#onSolutionChange" prefHeight="25.0" prefWidth="150.0" stylesheets="@../css/combobox.css" GridPane.columnIndex="4" GridPane.rowIndex="3">
                              <GridPane.margin>
                                 <Insets />
                              </GridPane.margin>
                           </ComboBox>
                           <Label text="3. Subproblema" textFill="WHITE" GridPane.rowIndex="2">
                              <font>
                                 <Font size="18.0" />
                              </font>
                              <padding>
                                 <Insets right="10.0" />
                              </padding>
                           </Label>
                           <Label layoutX="27.0" layoutY="66.0" minHeight="-Infinity" minWidth="-Infinity" text="4: Regla recursiva" textFill="WHITE" GridPane.columnIndex="4" GridPane.rowIndex="2">
                              <font>
                                 <Font size="18.0" />
                              </font>
                              <padding>
                                 <Insets right="10.0" />
                              </padding>
                           </Label>
                        </children>
                        <padding>
                           <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </padding>
                     </GridPane>

                  </children>
               </VBox>
            </children>
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
         </HBox>
         <VBox spacing="20.0">
            <children>
               <Button id="greenButton" fx:id="resetDiagram" onAction="#resetDiagram" stylesheets="@../css/button.css" text="Reiniciar datos" textFill="WHITE">
                  <opaqueInsets>
                     <Insets />
                  </opaqueInsets>
                  <font>
                     <Font size="16.0" />
                  </font>
               </Button>
               <Button id="redButton" fx:id="returnMenuButton" onAction="#returnToMenu" stylesheets="@../css/button.css" text="Volver al menú" textFill="WHITE">
                  <opaqueInsets>
                     <Insets />
                  </opaqueInsets>
                  <font>
                     <Font size="16.0" />
                  </font>
               </Button>
            </children>
            <VBox.margin>
               <Insets bottom="20.0" left="20.0" />
            </VBox.margin>
         </VBox>
      </children>
   </VBox>

</AnchorPane>
